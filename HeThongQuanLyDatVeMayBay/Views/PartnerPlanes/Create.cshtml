@using HeThongQuanLyDatVeMayBay.Models
@model HeThongQuanLyDatVeMayBay.Models.MAYBAY

@{
    ViewBag.Title = "Create";
    DBEntities_QLHeThongDatVeMayBay db = new DBEntities_QLHeThongDatVeMayBay();
    var listhang = db.HANGMAYBAYs.ToList();
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />
    <style>
        form label{
            margin-top: 10px;
        }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-3">
        <h3 class="text-center">Thêm Máy Bay mới</h3>
        <form>
            <label for="tenmaybay">Tên máy bay</label>
            <input type="text" name="tenmaybay" class="form-control">
            <label for="hangmaybay">Hãng máy bay</label>
            <select class="form-select form-control" aria-label=".form-select-sm example" name="idHang">
                @foreach (var items in listhang)
                {
                    if (items.TenHang == Content.TenHang)
                    {
                        <option>@items.idHang @items.TenHang</option>
                    }
                }
            </select>
            <label for="soluongkhach">Số lượng khách tối đa</label>
            <input type="number" name="soluongkhach" class="form-control">
            <br />
            <input type="submit" value="Thêm mới" class="btn btn-success mt-2">
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </form>
    </div>
}


