@model List<HeThongQuanLyDatVeMayBay.Models.KHUYENMAI>
@{
    ViewBag.Title = "Promotion";
}
<style>

    .container_swap {
        border: 1px solid;
        border-radius: 15px;
        width: 730px;
        height: 220px;
        background-image: url("../../Image/icon/voucher1.png");
        background-repeat: no-repeat;
    }
</style>
<div style="width: 100%; height: 108px; background-color: #00a6ff;"></div>
<br />
<h2 style="text-align: center">Promotion</h2>
<br />
<div style="margin-left: 25%">
    @foreach (var promo in Model)
    {
        <div class="container_swap">
            @if (promo.GiaTriKM < 1000)
            {
                <div style=" margin-top: 65px; margin-left: 480px; font-size: xx-large;"><b>-@promo.GiaTriKM %</b></div>
            }
            else
            {
                <div style=" margin-top: 65px; margin-left: 460px; font-size: xx-large;"><b>-@promo.GiaTriKM VNĐ</b></div>
            }
            <div style=" margin-left: 280px; margin-top: 5px;">&#10031; Mã Voucher: <b>@promo.MaKhuyenMai</b></div>
            <div style="margin-left: 280px;">&#10031; Từ ngày @promo.NgayBatDauKM.Value.Day/@promo.NgayBatDauKM.Value.Month/@promo.NgayBatDauKM.Value.Year đến ngày @promo.NgayKetThucKM.Value.Day/@promo.NgayKetThucKM.Value.Month/@promo.NgayKetThucKM.Value.Year</div>
            <div style=" margin-left: 280px; width: 280px; margin-top: 2px;">&#10031; Chi tiết: @promo.ChiTietMoTaKM</div>
        </div>
        <br />
    }
</div>
<br />
<br />