@using HeThongQuanLyDatVeMayBay.Models
@model HeThongQuanLyDatVeMayBay.Models.CHUYENBAY

@{
    ViewBag.Title = "Create";
    DBEntities_QLHeThongDatVeMayBay db = new DBEntities_QLHeThongDatVeMayBay();
    var listmaybay = db.MAYBAYs.ToList();
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />
    <style>
        form label {
            margin-top: 5px;
        }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-3">
        <h3 class="text-center">Thêm Chuyến Bay mới</h3>
        <form>
            <label for="ngaybay">Ngày bay</label>
            <div class="form-group">
                <input type="date" name="ngaybay" max="3000-12-31"
                       min="1000-01-01" class="form-control">
            </div>
            <label for="giobay">Giờ bay</label>
            <input type="text" name="giobay" class="form-control">
            <label for="gioden">Giờ đến</label>
            <input type="text" name="gioden" class="form-control">
            <label for="noidi">Nơi đi</label>
            <input type="text" name="noidi" class="form-control">
            <label for="noiden">Nơi đến</label>
            <input type="text" name="noiden" class="form-control">
            <label for="maybay">Chọn máy bay</label>
            <select class="form-select form-control" aria-label=".form-select-sm example" name="idMayBay">
                <option selected disabled="disabled">...</option>
                @foreach (var items in listmaybay)
                 {
                    <option>@items.idMayBay @items.TenMayBay &#124; @items.HANGMAYBAY.TenHang &#124; @items.SoLuongKhach Khách</option>
                 }
            </select>
            <input type="submit" value="Thêm mới" class="btn btn-success mt-2"> <br>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </form>
    </div>
}


