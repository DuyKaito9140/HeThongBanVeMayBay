@model HeThongQuanLyDatVeMayBay.Models.USER
@using HeThongQuanLyDatVeMayBay.Models
@{
    ViewBag.Title = "EditInfo";
    Layout = null;
    DBEntities_QLHeThongDatVeMayBay db = new DBEntities_QLHeThongDatVeMayBay();
    var listquyen = db.LOAIQUYENs.ToList();
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />  
    <script src="https://code.jquery.com/jquery-3.5.0.js"></script>
    
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mt-3">
        <h3 class="text-center">Cập nhật thông tin cá nhân</h3>
        <form>
            <div class="form002">
                <label for="NgaySinh">ID User: </label>
                <input type="text" readonly name="idUser" value="@Model.idUser" class="form-control">
            </div>
            <div class="form002" style="width: 49%; float: right;">
                <label for="NgaySinh">Ngày sinh: </label>
                <input type="text" name="NgaySinh" value="@Model.NgaySinh.Value.Month/@Model.NgaySinh.Value.Day/@Model.NgaySinh.Value.Year" class="form-control">
            </div>
            <div class="form002" style="width: 49%;">
                <label for="HoTen">Họ tên: </label>
                <input type="text" name="HoTen" value="@Model.HoTen" class="form-control">
            </div>
            <div class="form002" style="width: 49%; float: right;">
                <label for="DiaChi">Giới tính: : </label>
                <select class="form-select form-control" aria-label=".form-select-sm example" name="GioiTinh">
                    @if (Model.GioiTinh == "Nam")
                    {
                        <option>Nam</option>
                        <option>Nữ</option>
                        <option>Khác</option>
                    }
                    else if (Model.GioiTinh == "Nữ")
                    {
                        <option>Nữ</option>
                        <option>Nam</option>
                        <option>Khác</option>
                    }
                    else
                    {
                        <option>Khác</option>
                        <option>Nam</option>
                        <option>Nữ</option>
                    }
                </select>
            </div>
            <div class="form002" style="width: 49%;">
                <label for="DiaChi">Địa chỉ: </label>
                <input type="text" name="DiaChi" value="@Model.DiaChi" class="form-control">
            </div>
            <div class="form002" style="width: 49%; float: right;">
                <label for="Email">Email: </label>
                <input type="text" name="Email" value="@Model.Email" class="form-control">
            </div>
            <div class="form002" style="width: 49%;">
                <label for="Sdt">Số điện thoại: </label>
                <input type="text" name="Sdt" value="@Model.Sdt" class="form-control">
            </div>
            <div class="form002" style="width: 49%; float: right;">
                <label for="QuocTich">Quốc tịch: </label>
                <input type="text" name="QuocTich" value="@Model.QuocTich" class="form-control">
            </div>
            <div class="form002" style="width: 49%;">
                <label for="Cmnd">CMND: </label>
                <input type="text" name="Cmnd" value="@Model.Cmnd" class="form-control">
            </div>
            <br />
            <br />
            <input type="submit" value="Save" class="btn btn-primary mt-2" style="width: 100px"><br />
            <div>
                @Html.ActionLink("Back to Home", "Index")
            </div>
        </form>
    </div>
}

