@using HeThongQuanLyDatVeMayBay.Models;
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="rica">
    <meta name="keywords" content="rica">
    <meta name="author" content="rica">
    <link rel="icon" href="~/Image/favicon.png" type="image/x-icon" />
    <title>GOLDSKY</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/styte.css" />
    <style>
        .btn-primary, .btn-danger {
            width: 80px;
            margin-bottom: 3px;
        }

        .btn-success {
            margin-bottom: 5px;
        }

        .navbar-left ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            width: 240px;
            background-color: lavender;
        }

        .navbar-left li a {
            display: block;
            color: #000;
            padding: 8px 16px;
            text-decoration: none;
        }

        .navbar-left li a.active {
            background-color: #5308d5;
            font-weight: bold;
            color: white;
            text-align: center;
        }

        .navbar-left li a:hover:not(.active) {
            background-color: #dc3545;
            font-weight: bold;
            color: white;
        }

        .contrainer-home {
            margin-top: -22px;
            margin-left: 245px;
            margin-right: 2px;
        }
        .navbar-left {
            position: absolute;
            height: 750px;
            margin-top: 2px;
            margin-left: 2px;
            background-color: lavender;
        }
        
        .myclassed {
            width: 35px;
            height: 35px;
            border: 1px solid #d6d4d4;
            background-color: white;
            margin-left: 5px;
            padding-top: 3px;
            text-align: center;
            vertical-align: central;
        }

        .myclassed:hover {
            background-color: #ffe75b;
            cursor: pointer;
        }

        .pagination-section .pagination {
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
        }

        .fontbold {
            font-weight: 600;
        }

        .create-refesh .btn-warning {
            margin-left: 5px;
        }

        .create-refesh {
            display: flex;
        }
    </style>    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <img src="~/Image/logo_hethongbig.png" width="220" height="70" style="margin-left: 5px;">
        @if (Content.QuyenUser == "Admin")
        {
            <a class="navbar-brand text-white setfont" style="margin-left: 15px; font-size: 35px;">ADMIN</a>
        }
        else
        {
            <a class="navbar-brand text-white setfont" style="margin-left: 15px; font-size: 35px;">PARTNER</a>
        }

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            @if (Content.QuyenUser == "Admin")
            {
                <span style="background-color: white; margin-right: 10px; font-size: 18px; border-radius: 5px; padding: 7px; font-weight: 600;">@Content.HoTen</span>
                <span style="background-color: white; margin-right: 10px; font-size: 18px; border-radius: 5px; padding: 7px; font-weight: 600;">Email: @Content.email</span>
                <span style="background-color: white; margin-right: 15px; font-size: 18px; border-radius: 5px; padding: 7px; font-weight: 600;">Liên hệ: @Content.sdt</span>
            }
            else
            {
                <span style="background-color: white; margin-right: 10px; font-size: 18px; border-radius: 5px; padding: 7px; font-weight: 600;">@Content.TenHang</span>
                <span style="background-color: white; margin-right: 10px; font-size: 18px; border-radius: 5px; padding: 7px; font-weight: 600;">Email: @Content.EmailHang</span>
                <span style="background-color: white; margin-right: 15px; font-size: 18px; border-radius: 5px; padding: 7px; font-weight: 600;">Liên hệ: @Content.SdtHang</span>
            }

            <form class="form-inline my-2 my-lg-0">
                @using (Html.BeginForm())
                {
                    <input class="form-control mr-sm-2" type="search" name="mysearch" style="width: 235px;" placeholder="Search" aria-label="Search">
                    <button type="submit" class="btn btn-danger" style="width: 60px; margin-bottom: 0px;">
                        <i class="fas fa-search"></i>
                    </button>
                    <a href="Home/Logout" style="background-color: white; padding: 10px 6px; border-radius: 5px; font-size: 12px; margin-left: 8px;">
                        <i class="fas fa-sign-out-alt">&nbsp;Log Out</i>
                    </a>
                }
            </form>
        </div>
    </nav>
    <div class="navbar-left">
        <ul>
            <li><a class="active">MENU</a></li>
            <li><a href="/Home/IndexPartner">Home</a></li>
            @if (Content.QuyenUser == "Admin")
            {
                <li><a href="/AdminUser/Index">User</a></li>
                <li><a>Revenue</a></li>
                <li><a href="/PartnerTickets/Index">Ticket</a></li>
                <li><a href="/Promotion/Index">Promotion</a></li>
            }
            else
            {
                <li><a href="/PartnerTickets/Index">Ticket</a></li>
                <li><a href="/PartnerFlights/Index">Flight</a></li>
                <li><a href="/PartnerPlanes/Index">Plane</a></li>
            }
            <li><a>About</a></li>
            <li><a>Contact</a></li>
        </ul>
    </div>
    <br />
    <div class="contrainer-home">
        @RenderBody()
    </div>
    <hr />    
</body>
</html>




